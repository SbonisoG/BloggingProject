@model Post
@{
    ViewData["Title"] = Model.Title;
}

<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif;
    }

    .feature-image{
        width:100%;
        height: 500px;
        object-fit: cover;
        margin-bottom: 20px;
        border-radius: 10px;
    }
</style>

<div class="text-end">
    <a class="btn btn-secondary my-3">Edit Post</a>
    <a class="btn btn-danger mx-3 my-3">Delete Post</a>
</div>

<div class="content-wrapper">
    <h1>@Model.Title</h1>
    <P><span class="badge bg-primary">By </span>@Model.Author | <span class="badge bg-primary">Published on</span> @Model.PublishedDate.ToString("MMM dd,yyyy")</P>
    <p><span class="badge bg-secondary">Category</span> @Model.Category.Name</p>
    <img src="@Model.imagePath" alt="@Model.Title" class="feature-image"/>
    <div>@Html.Raw(Model.Content)</div>
    <hr />

    @if (Model.Comments.Any())
    {
        <div>
            @foreach(var comment in Model.Comments)
            {
                <div class="card mb-3 shadow-sm">
                    <h5 class="card-title">@comment.UserName</h5>
                    <p class="card-text text-muted">@comment.CommentContent</p>
                    <p class="card-text">@comment.CommentContent</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No Comments yet. Be the first to comment</p>
    }

</div>